<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".cruds.login.RegisterActivity">


    <TextView
        android:id="@+id/idTVHead"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="10dp"
        android:text="Registro"
        android:textAlignment="center"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/idEdtUsr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idTVHead"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:hint="Usuario" />

    <EditText
        android:id="@+id/idEdtPas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtUsr"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:hint="ContraseÃ±a" />

    <Button
        android:id="@+id/idBtnRegReg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idEdtPas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Registrarse"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnRigCnl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idBtnRegReg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Cancelar"
        android:textAllCaps="false" />



</RelativeLayout>